{
  "author": "Srcery Team",
  "license": "MIT",
  "name": "srcery.github.io",
  "description": "Jekyll test site for srcery",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/srcery-colors/srcery.git"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "cssnano": "^4.0.5",
    "file-loader": "^1.1.11",
    "mini-css-extract-plugin": "^0.4.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "postcss-scss": "^2.0.0",
    "prettier-standard": "^8.0.1",
    "standard": "^11.0.1",
    "stylelint": "^9.4.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-no-unsupported-browser-features": "^3.0.1",
    "stylelint-scss": "^3.3.0",
    "tailwindcss": "^0.6.4",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1"
  },
  "dependencies": {
    "@fancyapps/fancybox": "^3.3.5",
    "jquery": "^3.3.1",
    "jquery-lazy": "^1.7.9"
  },
  "scripts": {
    "build:dev": "npm run build:development",
    "build:development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --run-dev --config=config/webpack.config.js",
    "build:prod": "npm run build:production",
    "build:production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --run-prod --config=config/webpack.config.js",
    "jekyll:watch": "bundle exec jekyll serve --watch -V",
    "lint:js": "node_modules/standard/bin/cmd.js src/*.js",
    "lint:style": "node_modules/stylelint/bin/stylelint.js src/**/*.css src/**/*.scss",
    "test": "npm run lint:js && npm run lint:style",
    "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --run-dev --watch --config=config/webpack.config.js"
  },
  "browserslist": [
    "> 5%",
    "last 2 version",
    "not bb 7",
    "not op_mini all"
  ],
  "standard": {
    "globals": [
      "$"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-prettier",
    "plugins": [
      "stylelint-no-unsupported-browser-features",
      "stylelint-scss"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "severity": "warning"
        }
      ],
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": "tailwind"
        }
      ]
    }
  }
}
